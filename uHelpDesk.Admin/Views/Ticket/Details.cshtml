@model uHelpDesk.Admin.ViewModels.Ticket.TicketDetailsViewModel

@{
    ViewData["Title"] = "Ticket Details";
}

<section class="section">
    <div class="container">
        <div class="box">
            <h1 class="title">Ticket Details</h1>

            @if (TempData["error"] != null)
            {
                <div class="notification is-danger">@TempData["error"]</div>
            }

            @if (TempData["success"] != null)
            {
                <div class="notification is-success">@TempData["success"]</div>
            }

            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <input class="input" value="@Model.Title" readonly />
                </div>
            </div>

            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <textarea class="textarea" readonly>@Model.Description</textarea>
                </div>
            </div>

            <div class="field">
                <label class="label">Customer</label>
                <div class="control">
                    <input class="input" value="@Model.CustomerName" readonly />
                </div>
            </div>

            <div class="field">
                <label class="label">Status</label>
                <div class="control">
                    <input class="input" value="@Model.StatusName" readonly />
                </div>
            </div>

            <div class="field">
                <label class="label">Assigned To</label>
                <div class="control">
                    <input class="input" value="@Model.AssignedTo" readonly />
                </div>
            </div>

            <div class="field">
                <label class="label">Resolved At</label>
                <div class="control">
                    <input class="input" value="@Model.ResolvedAt" readonly />
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="button is-warning">Edit</a>
                </div>
                <div class="control">
                    <a asp-action="Index" class="button is-light">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>
