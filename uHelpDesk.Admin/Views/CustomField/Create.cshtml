@model uHelpDesk.Admin.ViewModels.CustomField.CustomFieldEditVM

@{
    ViewData["Title"] = "Create New Custom Field";
    Layout = "_Layout";
}

<section class="section">
    <div class="container">
        <div class="box">
            <h1 class="title">@ViewData["Title"]</h1>

            <form asp-action="Create" method="post" novalidate>
                <input type="hidden" asp-for="EntityType" />

                <div class="field">
                    <label class="label" asp-for="FieldName"></label>
                    <div class="control">
                        <input asp-for="FieldName" class="input" placeholder="Enter Field Name" />
                    </div>
                    <span asp-validation-for="FieldName" class="help is-danger"></span>
                </div>

                <div class="field">
                    <label class="label" asp-for="FieldType"></label>
                    <div class="control">
                        <div class="select">
                            <select asp-for="FieldType">
                                <option value="Text">Text</option>
                                <option value="Number">Number</option>
                            </select>
                        </div>
                    </div>
                    <span asp-validation-for="FieldType" class="help is-danger"></span>
                </div>

                <div class="field">
                    <div class="control">
                        <label class="checkbox">
                            <input asp-for="IsActive" type="checkbox" />
                            Active
                        </label>
                    </div>
                </div>

                <div class="field is-grouped">
                    <div class="control">
                        <button type="submit" class="button is-primary">Create Custom Field</button>
                    </div>
                    <div class="control">
                        <a asp-action="Index" class="button is-light">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
